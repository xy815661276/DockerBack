<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.docker.Mapper.ProjectMapper">

    <resultMap id="ProjectMap" type="com.hust.docker.entity.DockerProject">
        <id property="id" column="id" javaType="java.lang.Integer" jdbcType="INTEGER"/>
        <result property="intro" column="intro" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="title" column="title" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="link" column="link" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="img" column="img" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="pdflink" column="pdflink" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="views" column="views" javaType="java.lang.Integer" jdbcType="INTEGER"/>
    </resultMap>

    <select id="selectAll"  resultMap="ProjectMap">
        select * from projects
    </select>
    <select id="selectCnAll"  resultMap="ProjectMap">
        select * from projects_cn
    </select>
    <select id="selectById" resultType="com.hust.docker.entity.DockerProject">
        select * from projects where id = #{id}
    </select>
    <update id="addViews">
        update projects set views = views+1 where link like "%"#{link}"%";
        update projects_cn set views = views+1 where link like #{link}"%";
    </update>
    <select id="search" resultType="com.hust.docker.entity.DockerProject">
        select * from projects where title like "%"#{index}"%" or intro like "%"#{index}"%"
    </select>
    <select id="searchCn" resultType="com.hust.docker.entity.DockerProject">
        select * from projects_cn where title like "%"#{index}"%" or intro like "%"#{index}"%"
    </select>
</mapper>